{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@/assets": ["src/assets/*"],
      "@/components": ["src/components/*"],
      "@/foundation": ["src/foundation/*"],
      "@/pages": ["src/pages/*"],
      "@/templates": ["src/templates/*"],
    }
  }
}
